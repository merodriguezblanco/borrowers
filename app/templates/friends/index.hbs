<table class="primary">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each friend in model}}
      <tr>
        <td>{{link-to friend.fullName 'articles' friend}}</td>
        <td><a href="#" {{action 'delete' friend}}>Delete</a></td>
      </tr>
    {{/each}}
  </tbody>
</table>
